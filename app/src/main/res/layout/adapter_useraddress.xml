<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_address"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/ad_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_3"
            android:textSize="@dimen/textsize14" />

        <TextView
            android:id="@+id/ad_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ad_username"
            android:textColor="@color/crimson"
            android:textSize="@dimen/textsize14" />

        <TextView
            android:id="@+id/ad_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ad_default"
            android:text=""
            android:textColor="@color/black_3"
            android:textSize="@dimen/textsize14" />

        <TextView
            android:id="@+id/ad_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text=""
            android:textColor="@color/black_6"
            android:textSize="@dimen/textsize13_13" />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shouhuodizhi_bianji" />
    </RelativeLayout>

</LinearLayout>