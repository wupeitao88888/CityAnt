<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ListView
        android:id="@+id/details_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:background="@color/white"
        android:dividerHeight="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="分享"
            android:textSize="17sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="聊一聊"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/app_theme"
            android:gravity="center"/>

        <TextView
            android:id="@+id/commit_sing_up"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="立即报名"
            android:textColor="@color/app_theme"
            android:background="@color/black"
            android:textSize="17sp"
            android:gravity="center"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sing_up_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="#8000">

        <LinearLayout
            android:id="@+id/bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_theme"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="取消"
                android:textSize="17sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_weight="1"
                android:textColor="@color/app_theme"
                android:text="确定报名"
                android:textSize="17sp"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tip_sing_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_above="@+id/bottom_ll"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            android:text="提示：确认报名即默认为您有能力完成该需求，报名截止后如您已被确定为需求参与者则不允许取消报名，强行取消会对您的信誉造车不良影响，请谨慎报名！"
            android:textColor="#999999"/>

        <EditText
            android:id="@+id/edit_message"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:paddingTop="10dp"
            android:maxLength="120"
            android:ellipsize="end"
            android:gravity="top|left"
            android:layout_above="@+id/edit_num"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/edit_num"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/tip_sing_up"
            android:textColor="@color/black_6"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="4/120"
            android:textSize="10sp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/sing_up_message"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:text="报名留言"
            android:textSize="15sp"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_above="@+id/edit_message"
            android:paddingLeft="12dp"/>

        <View
            android:id="@+id/sing_up_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/sing_up_message"
            android:background="#8000"/>
    </RelativeLayout>


</RelativeLayout>
