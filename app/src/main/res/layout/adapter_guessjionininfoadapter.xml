<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/from_usericon"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@color/black" />

        <TextView
            android:id="@+id/from_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/from_usericon"
            android:text="马晓丽"
            android:textColor="@color/best_luck_yellow"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/from_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="答对了您的题目，您的蚂蚁豆减少10."
            android:textColor="#333333"
            android:textSize="14dp"
            android:layout_toRightOf="@+id/from_username"
            android:layout_toEndOf="@+id/from_username" />
    </RelativeLayout>

</LinearLayout>