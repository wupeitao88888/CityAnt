<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar">

        <TextView
            android:id="@+id/position_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[北京]"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/scan_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/saomiao"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"/>

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="#F9E683"
            android:focusable="false"
            android:paddingLeft="5dp"
            android:hint="搜索你感兴趣的内容"
            android:gravity="center"
            android:drawableLeft="@drawable/home_search"
            android:layout_marginRight="10dp"
            android:imeOptions="actionSearch"
            android:layout_toRightOf="@+id/position_text"
            android:layout_toLeftOf="@+id/scan_image"/>


    </RelativeLayout>

    <com.iloomo.widget.imgscroll.MyImgScroll
        android:id="@+id/banner_scroll"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@color/gray">

        <LinearLayout
            android:id="@+id/vb"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="3dip"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@+id/lc_slideshowview_carousel"
            android:orientation="horizontal" />

    </com.iloomo.widget.imgscroll.MyImgScroll>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:text="精彩推荐"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@color/gray"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@color/gray"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:background="@color/app_bg"/>
</LinearLayout>
