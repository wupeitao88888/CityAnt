<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31.5dp">

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/default_head" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/login_edittext_height"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/phone_number"
                        style="@style/login_edittext"
                        android:layout_weight="1"
                        android:hint="@string/phonenumber"
                        android:inputType="phone"
                        android:maxLength="11" />

                    <RelativeLayout
                        android:id="@+id/phone_icon"
                        style="@style/icon_re">

                        <ImageView
                            style="@style/img_icon"
                            android:background="@drawable/phone" />
                    </RelativeLayout>
                    <!--<Button-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:background="@drawable/button_send_code"-->
                    <!--android:paddingLeft="10dp"-->
                    <!--android:paddingRight="10dp"-->
                    <!--android:text="发送验证码"-->
                    <!--android:textSize="13dp"-->
                    <!--android:textColor="@color/black" />-->


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/login_edittext_height"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/password_number"
                        style="@style/login_edittext"
                        android:layout_weight="1"
                        android:hint="@string/insrtpw"
                        android:inputType="textPassword"
                        android:maxLength="11" />

                    <RelativeLayout
                        android:id="@+id/password_icon"
                        style="@style/icon_re">

                        <ImageView
                            style="@style/img_icon"
                            android:background="@drawable/pw" />
                    </RelativeLayout>
                    <!--<Button-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:background="@drawable/button_send_code"-->
                    <!--android:paddingLeft="10dp"-->
                    <!--android:paddingRight="10dp"-->
                    <!--android:text="发送验证码"-->
                    <!--android:textSize="13dp"-->
                    <!--android:textColor="@color/black" />-->


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:background="#d2d2d2" />

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="fill_parent"
                    android:layout_height="43dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_login"
                    android:onClick="onLoginClick"
                    android:text="@string/login"
                    android:textColor="@color/title_text"
                    android:textSize="16.6dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:onClick="onForgetPasswordClick">

                        <TextView
                            style="@style/forget_new"
                            android:text="@string/forgetpw" />
                    </RelativeLayout>

                    <!--<RelativeLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:onClick="onNewUserClick"-->
                    <!--android:paddingRight="50dp">-->

                    <!--<TextView-->
                    <!--style="@style/forget_new"-->
                    <!--android:text="@string/newuser" />-->

                    <!--</RelativeLayout>-->

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    >

                    <CheckBox
                        android:id="@+id/agree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/checked_text"
                        android:textColor="@color/title_text"
                        style="@style/MyCheckBox"
                        android:textSize="11.3dp" />

                    <TextView
                        android:id="@+id/negotiate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/agree"
                        android:text="@string/negotiate"
                        android:textColor="@color/yellow"
                        android:textSize="11.3dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginTop="58dp">

                    <RelativeLayout
                        android:id="@+id/fast_line_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/fast">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/fast_login" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="15.5dp"
                        android:paddingRight="15.5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fast_login"
                            android:textColor="@color/fast_login"
                            android:textSize="@dimen/textsize13" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/fast_line_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/fast">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/fast_login" />

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            style="@style/fast_login_re"
                            android:onClick="onWeboLoginClick">

                            <ImageView
                                android:id="@+id/weibo_icon"
                                style="@style/fast_login_img_icon"
                                android:background="@mipmap/wb" />

                            <TextView
                                style="@style/fast_login_text"
                                android:layout_below="@+id/weibo_icon"
                                android:text="@string/webo" />

                        </RelativeLayout>
                        <RelativeLayout
                            style="@style/fast_login_re"
                            android:onClick="onQQLoginClick">

                            <ImageView
                                android:id="@+id/qq_icon"
                                style="@style/fast_login_img_icon"
                                android:background="@mipmap/wqq" />

                            <TextView
                                style="@style/fast_login_text"
                                android:layout_below="@+id/qq_icon"
                                android:text="@string/qq" />

                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/fast_login_re"
                            android:onClick="onWeiXinLoginClick">

                            <ImageView
                                android:id="@+id/wexin_icon"
                                style="@style/fast_login_img_icon"
                                android:background="@mipmap/wx" />

                            <TextView
                                style="@style/fast_login_text"
                                android:layout_below="@+id/wexin_icon"
                                android:text="@string/weixin" />
                        </RelativeLayout>



                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>