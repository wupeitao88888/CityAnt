<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/beijign">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:src="@color/white"
                        android:textSize="30dp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/login_edittext_height"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/login_edittext"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/phone_icon"
                        style="@style/icon_re">

                        <ImageView
                            style="@style/img_icon"
                            android:background="@color/white" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/phone_number"
                        style="@style/login_edittext"
                        android:layout_weight="1"
                        android:hint="@string/phonenumber"
                        android:maxLength="11"
                        android:phoneNumber="true" />

                    <!--<Button-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:background="@drawable/button_send_code"-->
                    <!--android:paddingLeft="10dp"-->
                    <!--android:paddingRight="10dp"-->
                    <!--android:text="发送验证码"-->
                    <!--android:textSize="13dp"-->
                    <!--android:textColor="@color/black" />-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/login_edittext_height"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/login_edittext"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/password_icon"
                        style="@style/icon_re">

                        <ImageView
                            style="@style/img_icon"
                            android:background="@color/white" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/password_number"
                        style="@style/login_edittext"
                        android:layout_weight="1"
                        android:hint="@string/insrtpw"
                        android:maxLength="11"
                        android:password="true" />

                    <!--<Button-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:background="@drawable/button_send_code"-->
                    <!--android:paddingLeft="10dp"-->
                    <!--android:paddingRight="10dp"-->
                    <!--android:text="发送验证码"-->
                    <!--android:textSize="13dp"-->
                    <!--android:textColor="@color/black" />-->


                </LinearLayout>


                <Button
                    android:id="@+id/login_button"
                    android:layout_width="fill_parent"
                    android:layout_height="52dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_login"
                    android:onClick="onLoginClick"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="15dp" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onForgetPasswordClick"
                        android:paddingLeft="50dp">

                        <TextView
                            style="@style/forget_new"
                            android:text="@string/forgetpw"

                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:onClick="onNewUserClick"
                        android:paddingRight="50dp">

                        <TextView
                            style="@style/forget_new"
                            android:text="@string/newuser" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginTop="97dp">

                    <RelativeLayout
                        android:id="@+id/fast_line_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/fast">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="15.5dp"
                        android:paddingRight="15.5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fast_login"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize13" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/fast_line_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/fast">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            style="@style/fast_login_re"
                            android:onClick="onQQLoginClick">

                            <ImageView
                                android:id="@+id/qq_icon"
                                style="@style/fast_login_img_icon"
                                android:background="@color/white" />

                            <!--<TextView-->
                                <!--style="@style/fast_login_text"-->
                                <!--android:layout_below="@+id/qq_icon"-->
                                <!--android:text="@string/qq" />-->

                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/fast_login_re"
                            android:onClick="onWeiXinLoginClick">

                            <ImageView
                                android:id="@+id/wexin_icon"
                                style="@style/fast_login_img_icon"
                                android:background="@color/white" />

                            <!--<TextView-->
                                <!--style="@style/fast_login_text"-->
                                <!--android:layout_below="@+id/wexin_icon"-->
                                <!--android:text="@string/weixin" />-->
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/fast_login_re"
                            android:onClick="onWeboLoginClick">

                            <ImageView
                                android:id="@+id/weibo_icon"
                                style="@style/fast_login_img_icon"
                                android:background="@color/white" />

                            <!--<TextView-->
                                <!--style="@style/fast_login_text"-->
                                <!--android:layout_below="@+id/weibo_icon"-->
                                <!--android:text="@string/webo" />-->

                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>