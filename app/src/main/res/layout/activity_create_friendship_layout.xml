<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/divider_line">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:background="@color/divider_line">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shangpin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击选择商品"
                    android:textColor="@color/black_6"
                    android:textSize="12sp"
                    android:layout_marginTop="42dp"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预支付"
                android:layout_centerVertical="true"
                android:textColor="@color/black_3"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"/>


            <EditText
                android:id="@+id/price_edit"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="输入金额"
                android:gravity="center"
                android:textColor="#999999"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:inputType="number"
                android:background="@drawable/btn_gray_stark_shape"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_3"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/price_edit"
                android:layout_marginRight="5dp"
                android:text="￥"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/ic_launcher"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="马小丽"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支持宣言"
                    android:textSize="15sp"
                    android:textColor="@color/black_6"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <EditText
                    android:id="@+id/support_reason_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:minLines="2"
                    android:maxLength="120"
                    android:hint="在此输入支持的理由"
                    android:gravity="top"
                    android:textColor="@color/black_3"
                    android:textSize="17sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_6"
                    android:text="0/120"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/support_reason_edit"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="选择支持对象"
            android:gravity="center_vertical"
            android:layout_marginTop="7dp"
            android:textColor="@color/black_3"
            android:textSize="17sp"
            android:background="@color/white"
            android:paddingLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="提示：选中支持对象我们会第一时间通知ta，发起后也可指定分享该条消息。"
            android:textColor="#626262"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:background="@drawable/button_login"
            android:textColor="#333333"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="确认创建"/>

    </LinearLayout>
</ScrollView>
