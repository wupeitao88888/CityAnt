<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/rangking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:textSize="14sp"
            android:text="4" />

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/rangking_text"
            android:background="@drawable/txqunzu"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14sp"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="马晓丽"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/user_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14sp"
            android:textColor="@color/black_3"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/mark_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/money_one_start"/>

            <TextView
                android:id="@+id/mark_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/mark_image"
                android:layout_marginLeft="14sp"
                android:textSize="12sp"
                android:text="180"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/the_wage_text"
            android:layout_width="66dp"
            android:layout_height="20dp"
            android:text="领工资"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="10sp"
            android:textColor="@color/the_wage_text_color"
            android:background="@drawable/the_wage_text_bg"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line" />

</LinearLayout>
