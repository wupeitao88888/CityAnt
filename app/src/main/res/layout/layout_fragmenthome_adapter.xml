<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_launcher"
                android:layout_marginTop="7.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:id="@+id/tag_text"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_below="@+id/logo_image"
                android:layout_marginTop="12.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/jiaoyou"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马晓丽"
                android:textColor="#333333"
                android:textSize="17sp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/sex_text"
                android:layout_width="74dp"
                android:layout_height="13dp"
                android:background="@drawable/nan"
                android:layout_marginLeft="12.5dp"
                android:text="      北京  22岁"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/user_name"
                android:layout_alignTop="@+id/user_name"/>

            <TextView
                android:id="@+id/auth_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sex_text"
                android:layout_alignTop="@+id/user_name"
                android:text="认"
                android:textColor="@color/white"
                android:layout_marginLeft="2.5dp"
                android:background="#fae001"/>

            <com.iloomo.widget.CostomRatingBar
                android:id="@+id/rating_bar_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_below="@+id/user_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/user_name"
                android:orientation="vertical"
                android:layout_marginRight="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:text="剩余名额"/>

                <TextView
                    android:id="@+id/places_text"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    android:background="#fae001"
                    android:textColor="@color/black"
                    android:text="01"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/title_rl"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#f4f4f4"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/rating_bar_five">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="求陪跑"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textSize="13sp"
                    android:textColor="#444444"/>

                <TextView
                    android:id="@+id/price_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:textSize="8.5dp"
                    android:text="/次"/>

                <TextView
                    android:id="@+id/price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/price_company"
                    android:textColor="#f74a49"
                    android:textSize="12dp"
                    android:text="￥10 "/>
            </RelativeLayout>


            <TextView
                android:id="@+id/introduction_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚上一个人跑好无聊"
                android:layout_below="@+id/title_rl"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:maxLines="2"
                android:textSize="11sp"
                android:textColor="#868686"
                android:ellipsize="end"/>

        </RelativeLayout>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/price_places_rl">
        <ImageView
            android:id="@+id/position_image"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/location"/>
        <TextView
            android:id="@+id/position_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朝阳"
            android:layout_marginLeft="2dp"
            android:textColor="#868686"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/position_image"/>

        <ImageView
            android:id="@+id/time_image"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/position_text"
            android:background="@drawable/history"/>
        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刚刚"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"
            android:textColor="#868686"
            android:layout_toRightOf="@+id/time_image"/>

        <TextView
            android:id="@+id/source_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线下"
            android:layout_alignParentRight="true"
            android:background="#f4f4f4"
            android:textColor="#868686"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_marginRight="10dp"/>


    </RelativeLayout>


</LinearLayout>